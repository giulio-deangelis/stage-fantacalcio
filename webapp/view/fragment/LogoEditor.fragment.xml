<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" editable="true" layout="ResponsiveGridLayout"
	id="logoEditorFragment">
	<Dialog title="{i18n>changeLogo}">
		<content>
			<sap.ui.layout.form:SimpleForm xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:sap.ui.layout.form="sap.ui.layout.form"
				xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout">
				<sap.ui.layout.form:content>
					<Label text="{i18n>logo}"/>
					<Input value="{/Logo}"/>
				</sap.ui.layout.form:content>
			</sap.ui.layout.form:SimpleForm>
		</content>
		<beginButton>
			<Button text="{i18n>confirm}" press="onSaveLogo"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>cancel}" icon="sap-icon://decline" press="onLogoEditCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>